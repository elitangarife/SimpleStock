generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id
  name        String
  description String?
  price       Float
  stock       Int
  createdAt   DateTime
  sales       Sale[]   @relation("ProductSales")
}

model Sale {
  id        String   @id
  product   Product  @relation("ProductSales", fields: [productId], references: [id])
  productId String
  quantity  Int
  date      DateTime
}